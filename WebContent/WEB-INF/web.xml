<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Real Estate Management Web Application</display-name>
	
	
	<servlet>
    <servlet-name>UsersServlet</servlet-name>
    <servlet-class>net.usermanagement.web.UsersServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/add</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/alogin</url-pattern>
</servlet-mapping>

	<servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>net.contentmanagement.web.HomeServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>PropertyServlet</servlet-name>
    <servlet-class>net.contentmanagement.web.PropertyServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/new</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/insert</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/edit</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/update</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/list</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/agents</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/apartments</url-pattern>
</servlet-mapping><servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/buildings</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/lands</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/property-item</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/property-item-admin</url-pattern>
</servlet-mapping>
<servlet-mapping>
    <servlet-name>PropertyServlet</servlet-name>
    <url-pattern>/search</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>net.contentmanagement.web.UserServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/contact</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/about</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/services</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>ContactServlet</servlet-name>
    <servlet-class>net.contactmanagement.web.ContactServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ContactServlet</servlet-name>
    <url-pattern>/send</url-pattern>
</servlet-mapping>

	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/Error.jsp</location>
	</error-page>
</web-app>